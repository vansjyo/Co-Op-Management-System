	<main>

		<!-- show any messages that come back with authentication -->
		<% if(messages.error){ %>

		<div class="card-panel red lighten-4 red-text text-darken-4"><%= messages.error %></div>
		<% } %>

		<% if(messages.info){ %>
		<div class="card-panel green lighten-4 black-text text-darken-4"><%= messages.info %></div>
		<% } %>



		<center><img src="/assets/images/nitk_logo.png" height="100px"><br><h3 class="nitk_size margin20">National Institute of Technology Karnataka, Surathkal</h3></center>
		<div class="container">
			<div class="row margin"> 
				<div class="col s12 m6 z-depth-3 deco1"> 
					<form action="/signup" method="post" class="coll" >
						<h3 class="center">Sign Up</h3>

						<div class="row">
							<div class="input-field col s6">
								<input type="text" name="firstname" class="validate" required>
								<label>first Name<span class="right">*</span></label>
							</div>
							<div class="input-field col s6">
								<input type="text" name="lastname" class="validate" required>
								<label>last Name</label>

							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<input id="psd" type="password" class="validate" name="password" minlength="4" required>
								<label>password*</label>
							</div>	
						</div> 
						<div class="row">
							<div class="input-field col s12">
								<input id="psdc" type="password" class="validate" name="confirm_password" minlength="4" required>
								<label>Confirm password*</label>
							</div>	
						</div> 
						<div class="row">
							<div class="input-field col s12">
								<input name="telephone" type="tel" maxlength="12" class="validate" required> 
								<label>Telephone*(eg. 919935397676)</label>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<input name="email" type="email" class="validate" required>
								<label>Email*(your username)</label>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<input name="address" type="text" class="validate" required>
								<label>Tentative address*</label>
							</div>
						</div><br>
						<button class="btn waves-effect waves-light cyan darken-3" type="submit">SIGN UP
							<i class="material-icons right">send</i>
						</button>
					</form>
					<li class="divider"></li>
					<p class="center">Already Have An Account? <a href="/login"> Login In </a>Or go <a href="/">home</a></p>
				</div>
				<center><div class="col s12 m5 right"><img src="/assets/images/signup.png" class="coll" width="100%">
				</div></center>
			</div>
		</div>

		<br><br><br>
	</main>


