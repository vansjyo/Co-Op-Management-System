</head>

<body class="grey lighten-5">

	<!-- header  -->
	<header> 
		<div class="navbar-fixed bg">
			<nav class="bg"> 
				<div class="nav-wrapper"> 
					<a class="button-collapse left" href="#" data-activates="slide-out"><i class="material-icons">view_list</i></a> <!-- <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a> -->
					<img id="fav" class="left head_img" src="/assets/images/favicon.ico" width="35" height="35">
					<a href="/"><span class="left hd space head_size">NITK Consumers Cooperative Society</span></a>
					<ul class="right hide-on-med-and-down"> 
						<li><a href="/">Home</a></li> 
						<li><a href="/login">Log In</a></li> 
						<li><a href="/signup">Sign Up</a></li> 
						<li><a href="/contact_us">Contact Us</a></li>
					</ul> 
				</div> 
			</nav>
		</div>
	</header>

	<!-- ////header -->

	<!-- side nav menu -->
	<ul id="slide-out" class="side-nav">
		<li class="white">
			<div class="userView">
				<div class="background">
					<img src="/assets/images/nitklogo.jpg" width="100%">
				</div>
				<a href="https://www.nitk.ac.in" class="center">Nitk Surathkal</a>
			</div>
		</li>
		<li><i class="material-icons grey-text text-darken-3">home</i><a style="display: inline;" href="/" class="waves-effect space">Home</a></li>
		<li><i class="material-icons grey-text text-darken-3">input</i><a style="display: inline;" href="/login" class="waves-effect space">Log In</a></li>
		<li><div class="divider"></div></li>
		<li><i class="material-icons grey-text text-darken-3">assignment_ind</i><a style="display: inline;" href="/signup" class="waves-effect space">Sign Up</a></li>
		<li><div class="divider"></div></li>
		<li><i class="material-icons grey-text text-darken-3">contacts</i><a style="display: inline;" href="/contact" class="waves-effect space">Contact</a></li>
		<li><div class="divider"></div></li>
		<li><i class="material-icons grey-text text-darken-3">help</i><a style="display: inline;" class="waves-effect space" href="/help">Help</a></li>
	</ul>
	<!-- ////side nav menu -->

	<!-- ////side nav menu -->

	<br>

	<main>

		<!-- show any messages that come back with authentication -->
		<% if (messages.success) { %>
		<div class="card-panel blue lighten-4 black-text text-darken-4"><%= messages.success %></div>
		<% } %>

		<% if(messages.error){ %>
		<div class="card-panel red lighten-4 red-text text-darken-4"><%= messages.error %></div>
		<% } %>

		<% if(messages.loginMessage){ %>
		<div class="card-panel red lighten-4 red-text text-darken-4"><%= messages.loginMessage %></div>
		<% } %>
		
		<% if(messages.info){ %>
		<div class="card-panel blue lighten-4 black-text text-darken-4 center"><%= messages.info %><a href="/enterOTP" class="btn waves-effect waves-light">enter OTP<i class="material-icons">send</i></a></div>
		<% } %>




		<center><img src="/assets/images/nitk_logo.png" height="100px"><br><h3 class="nitk_size margin20">National Institute of Technology Karnataka, Surathkal</h3></center>
		<div class="row coll container">
			<div class="col s12 m6 z-depth-2 deco1">
				<h3 class="center">Log In<br></h3>
				<div class="divider"></div>
				<form action="/login" method="post" class="coll">
					<div class="input-field">
						<i class="material-icons prefix">account_circle</i>
						<input name="email" type="email" class="validate">
						<label for="email">Username(email)</label>
					</div>
					<div class="input-field">
						<i class="material-icons prefix">vpn_key</i>
						<input name="password" type="password" class="validate">
						<label for="password">Password</label>
					</div>
					<button class="btn waves-effect waves-light cyan darken-3" type="submit" name="action">Log In
						<i class="material-icons right">send</i>
					</button>
				</form>
				<li class="divider"></li>
				<p class="center">Need an account? <a href="/signup">Signup </a>Or go <a href="/">home</a></p>
				<li class="divider"></li>
				<a href="/forgot" class="waves-effect waves-light btn grey lighten-2 col s12 center black-text">Forgot Password?Click to reset</a></div>
			<div class="col s12 m6 right">
				<img src="/assets/images/Collage.jpg" class="coll" height="350px" width="100%">
			</div><br>
		</div>

		<br><br><br>
	</main>


	<!-- footer -->
	<% include partials/footer.ejs %>
